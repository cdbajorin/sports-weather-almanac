        // objects = sortCalendarData(baseballs, team_id);
        // cal.setData(objects);
        // console.log(objects);

        //close dropdown
        $("div.teams_button > a").trigger("click");
      });

      //close sports dropdown
      $("div.sports_button > a").trigger("click");
    });
  });
</script>
